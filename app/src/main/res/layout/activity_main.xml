<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_alignParentBottom="true"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/idTitileLogin"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-2dp"
        android:textAlignment="center"
        app:srcCompat="@drawable/logo_completa_laranja" />

    <EditText
        android:id="@+id/idEmail"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTitileLogin"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="23dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idPassword"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idEmail"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="23dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEmail" />

    <Button
        android:id="@+id/idLogin"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:layout_below="@+id/idPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/button_login"
        android:onClick="realizarLogin"
        android:text="@string/login_botal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPassword" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="54dp"
        android:layout_alignTop="@+id/idEmail"
        android:layout_alignBottom="@+id/idEmail"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-1dp"
        android:layout_toStartOf="@+id/idEmail"
        app:srcCompat="@drawable/ic_action_email_login" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="54dp"
        android:layout_alignTop="@+id/idPassword"
        android:layout_alignBottom="@+id/idPassword"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/idPassword"
        app:srcCompat="@drawable/ic_action_password_login" />

</RelativeLayout>